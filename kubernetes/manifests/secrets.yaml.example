# Example secrets file - DO NOT COMMIT ACTUAL SECRETS
# Copy this file to secrets.yaml and fill in actual values
# Then encrypt with: kubectl create secret generic teaching-assistant-secrets --from-file=secrets.yaml
# Or use sealed-secrets or external-secrets operator

apiVersion: v1
kind: Secret
metadata:
  name: teaching-assistant-secrets
  namespace: teaching-assistant
type: Opaque
stringData:
  # PostgreSQL Connection String
  CONNECTIONSTRINGS__DEFAULTCONNECTION: "Host=postgres-service;Port=5432;Username=postgres;Password=CHANGE_ME;Database=teaching_assistant;Pooling=true"
  
  # MSSQL Connection String
  CONNECTIONSTRINGS__MSSQLCONNECTION: "Server=mssql-service,1433;Database=teaching_assistant;User Id=sa;Password=CHANGE_ME;TrustServerCertificate=True"
  
  # JWT Secret Key (must be at least 32 characters)
  JWT_SETTINGS__SECRETKEY: "CHANGE_ME_TO_AT_LEAST_32_CHARACTERS_LONG_SECRET_KEY"
  
  # OpenAI API Key (if using cloud fallback)
  OPENAI_API_KEY: "CHANGE_ME"
  
  # Anthropic API Key (if using Claude fallback)
  ANTHROPIC_API_KEY: "CHANGE_ME"
