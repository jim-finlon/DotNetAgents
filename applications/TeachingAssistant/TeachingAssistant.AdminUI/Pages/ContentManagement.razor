@page "/content"
@using TeachingAssistant.Data.Entities
@using TeachingAssistant.AdminUI.Services
@inject ApiClient ApiClient

<PageTitle>Content Management</PageTitle>

<h1>Content Management</h1>

<div class="row mb-3">
    <div class="col-md-4">
        <label>Subject:</label>
        <select class="form-select" @bind="selectedSubject">
            <option value="">All Subjects</option>
            @foreach (var subject in Enum.GetValues<Subject>())
            {
                <option value="@subject">@subject</option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <label>Grade Band:</label>
        <select class="form-select" @bind="selectedGradeBand">
            <option value="">All Grades</option>
            @foreach (var grade in Enum.GetValues<GradeBand>())
            {
                <option value="@grade">@grade</option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <button class="btn btn-primary mt-4" @onclick="LoadContent">Load Content</button>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>Content Units</h5>
    </div>
    <div class="card-body">
        <p>Content management interface for viewing, editing, and managing curriculum content units.</p>
        <p><em>Note: Full content management requires content unit API endpoints.</em></p>
    </div>
</div>

