@page "/workflows"
@using DotNetAgents.Workflow.Designer
@using Microsoft.AspNetCore.Components.Web
@inject IWorkflowDesignerService DesignerService
@inject NavigationManager Navigation

<PageTitle>Workflows</PageTitle>

<div class="workflows-container">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 32px;">
        <div>
            <h1 style="margin: 0 0 8px 0; font-size: 32px; font-weight: 700; color: var(--text-primary);">
                My Workflows
            </h1>
            <p style="margin: 0; color: var(--text-secondary);">
                Manage and organize your workflow definitions
            </p>
        </div>
        <div style="display: flex; gap: 12px;">
            <button class="btn btn-secondary" @onclick="RefreshWorkflows" title="Refresh list">
                <span>üîÑ</span> Refresh
            </button>
            <button class="btn btn-primary" @onclick="CreateNewWorkflow">
                <span>‚ûï</span> New Workflow
            </button>
        </div>
    </div>

    @if (loading)
    {
        <p>Loading workflows...</p>
    }
    else if (workflows.Count == 0)
    {
        <div class="empty-state">
            <div style="font-size: 64px; margin-bottom: 24px;">üìä</div>
            <h3 style="margin: 0 0 12px 0; color: var(--text-primary);">No Workflows Yet</h3>
            <p style="margin: 0 0 24px 0; color: var(--text-secondary);">
                Create your first workflow to get started building amazing agent systems!
            </p>
            <button class="btn btn-primary" @onclick="CreateNewWorkflow">
                <span>‚ú®</span> Create Your First Workflow
            </button>
        </div>
    }
    else
    {
        <table class="workflows-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Version</th>
                    <th>Nodes</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var workflow in workflows)
                {
                    <tr>
                        <td>@workflow.Name</td>
                        <td>@(workflow.Description ?? "-")</td>
                        <td>@workflow.Version</td>
                        <td>@(workflow.Nodes?.Count ?? 0)</td>
                        <td>
                            <div style="display: flex; gap: 8px;">
                                <button class="btn btn-sm btn-primary" @onclick="@(() => EditWorkflow(workflow))" title="Edit workflow">
                                    <span>‚úèÔ∏è</span> Edit
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="@(() => DeleteWorkflow(workflow))" title="Delete workflow">
                                    <span>üóëÔ∏è</span> Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code {
    private List<WorkflowDefinitionDto> workflows = new();
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await RefreshWorkflows();
    }

    private async Task RefreshWorkflows()
    {
        loading = true;
        try
        {
            workflows = (await DesignerService.ListWorkflowsAsync()).ToList();
        }
        catch (Exception ex)
        {
            // Handle error
        }
        finally
        {
            loading = false;
        }
    }

    private void CreateNewWorkflow()
    {
        Navigation.NavigateTo("/designer");
    }

    private void EditWorkflow(WorkflowDefinitionDto workflow)
    {
        // Extract ID from workflow - may need to use a different property
        var workflowId = workflow.Name; // Temporary - should use actual ID
        Navigation.NavigateTo($"/designer/{workflowId}");
    }

    private async Task DeleteWorkflow(WorkflowDefinitionDto workflow)
    {
        // TODO: Implement delete with confirmation
        await RefreshWorkflows();
    }
}
