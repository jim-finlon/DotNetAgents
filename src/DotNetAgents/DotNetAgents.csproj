<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>12</LangVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
    <IsPackable>true</IsPackable>
    <PackageId>DotNetAgents</PackageId>
    <Description>Metapackage that includes all DotNetAgents packages for convenience.</Description>
  </PropertyGroup>

  <ItemGroup>
    <!-- Core Packages: Foundation abstractions and implementations -->
    <ProjectReference Include="..\DotNetAgents.Abstractions\DotNetAgents.Abstractions.csproj" />
    <ProjectReference Include="..\DotNetAgents.Core\DotNetAgents.Core.csproj" />
    <ProjectReference Include="..\DotNetAgents.Documents\DotNetAgents.Documents.csproj" />
    <ProjectReference Include="..\DotNetAgents.Tools.BuiltIn\DotNetAgents.Tools.BuiltIn.csproj" />
    
    <!-- Feature Packages: Domain-specific features and capabilities -->
    <ProjectReference Include="..\DotNetAgents.Workflow\DotNetAgents.Workflow.csproj" />
    <ProjectReference Include="..\DotNetAgents.Tasks\DotNetAgents.Tasks.csproj" />
    <ProjectReference Include="..\DotNetAgents.Knowledge\DotNetAgents.Knowledge.csproj" />
    <ProjectReference Include="..\DotNetAgents.Education\DotNetAgents.Education.csproj" />
    <ProjectReference Include="..\DotNetAgents.Configuration\DotNetAgents.Configuration.csproj" />
    <ProjectReference Include="..\DotNetAgents.Observability\DotNetAgents.Observability.csproj" />
    <ProjectReference Include="..\DotNetAgents.Security\DotNetAgents.Security.csproj" />
    
    <!-- Voice Packages: Voice command processing, transcription, and dialog management -->
    <ProjectReference Include="..\Voice\DotNetAgents.Voice\DotNetAgents.Voice.csproj" />
    <ProjectReference Include="..\Voice\DotNetAgents.Voice.Transcription\DotNetAgents.Voice.Transcription.csproj" />
    <ProjectReference Include="..\Voice\DotNetAgents.Voice.SignalR\DotNetAgents.Voice.SignalR.csproj" />
    <ProjectReference Include="..\Voice\DotNetAgents.Voice.Dialog\DotNetAgents.Voice.Dialog.csproj" />
    <ProjectReference Include="..\Voice\DotNetAgents.Voice.Scheduling\DotNetAgents.Voice.Scheduling.csproj" />
    
    <!-- MCP: Model Context Protocol client library -->
    <ProjectReference Include="..\DotNetAgents.Mcp\DotNetAgents.Mcp.csproj" />
    
    <!-- Storage Packages: Task and knowledge storage implementations -->
    <ProjectReference Include="..\DotNetAgents.Storage.TaskKnowledge.PostgreSQL\DotNetAgents.Storage.TaskKnowledge.PostgreSQL.csproj" />
    <ProjectReference Include="..\DotNetAgents.Storage.TaskKnowledge.SqlServer\DotNetAgents.Storage.TaskKnowledge.SqlServer.csproj" />
    
    <!-- Vector Store Packages: Vector similarity search implementations -->
    <ProjectReference Include="..\DotNetAgents.VectorStores.Pinecone\DotNetAgents.VectorStores.Pinecone.csproj" />
    <ProjectReference Include="..\DotNetAgents.VectorStores.PostgreSQL\DotNetAgents.VectorStores.PostgreSQL.csproj" />
    
    <!-- Provider Packages: LLM provider integrations -->
    <!-- Cloud APIs: Major cloud providers -->
    <ProjectReference Include="..\Providers\DotNetAgents.Providers.OpenAI\DotNetAgents.Providers.OpenAI.csproj" />
    <ProjectReference Include="..\Providers\DotNetAgents.Providers.Azure\DotNetAgents.Providers.Azure.csproj" />
    <ProjectReference Include="..\Providers\DotNetAgents.Providers.AWS\DotNetAgents.Providers.AWS.csproj" />
    <ProjectReference Include="..\Providers\DotNetAgents.Providers.Google\DotNetAgents.Providers.Google.csproj" />
    <!-- AI Companies: Independent AI providers -->
    <ProjectReference Include="..\Providers\DotNetAgents.Providers.Anthropic\DotNetAgents.Providers.Anthropic.csproj" />
    <ProjectReference Include="..\Providers\DotNetAgents.Providers.Cohere\DotNetAgents.Providers.Cohere.csproj" />
    <ProjectReference Include="..\Providers\DotNetAgents.Providers.Mistral\DotNetAgents.Providers.Mistral.csproj" />
    <ProjectReference Include="..\Providers\DotNetAgents.Providers.Together\DotNetAgents.Providers.Together.csproj" />
    <ProjectReference Include="..\Providers\DotNetAgents.Providers.Groq\DotNetAgents.Providers.Groq.csproj" />
    <!-- Local: Self-hosted and local inference -->
    <ProjectReference Include="..\Providers\DotNetAgents.Providers.Ollama\DotNetAgents.Providers.Ollama.csproj" />
    <ProjectReference Include="..\Providers\DotNetAgents.Providers.LMStudio\DotNetAgents.Providers.LMStudio.csproj" />
    <ProjectReference Include="..\Providers\DotNetAgents.Providers.vLLM\DotNetAgents.Providers.vLLM.csproj" />
  </ItemGroup>

</Project>
